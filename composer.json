{
    "name": "spoje.net/flexplorer",
    "description": "Průzkumník a editor evidencí FlexiBee",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Vítězslav Dvořák",
            "email": "info@vitexsoftware.cz"
        }   
    ],
    "minimum-stability": "dev",
    "require": {
        "league/commonmark": "^2.6",
        "spojenet/flexibee": "^3.5",
        "vitexsoftware/ease-core-bricks": "^1.2",
        "vitexsoftware/abraflexi-bricks": "*",
        "vitexsoftware/datatables-abraflexi": "dev-main",
        "vitexsoftware/ease-twbootstrap5": "*",
        "vitexsoftware/ease-html-widgets": "^1.1",
        "vitexsoftware/ease-bootstrap5-widgets": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Flexplorer\\": "src/Flexplorer/",
            "Flexplorer\\ui\\": "src/Flexplorer/ui/",
            "Flexplorer\\xml\\": "src/Flexplorer/xml/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Flexplorer\\": "testing/PHPUnit/src/classes/",
            "Test\\Ease\\": "vendor/vitexsoftware/ease-core/tests/src/Ease",
            "Test\\AbraFlexi\\": "vendor/spoje.net/abraflexi/testing/src/AbraFlexi/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpstan/phpstan": "*",
        "friendsofphp/php-cs-fixer": "^3.71",
        "ergebnis/composer-normalize": "^2.45",
        "ergebnis/php-cs-fixer-config": "^6.45"
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    }
}
